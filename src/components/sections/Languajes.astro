---
import Section from '../Section.astro';

import { languages } from '@cv';
---

<Section title="Idiomas">
    <ul class="flex flex-wrap gap-2 list-none">
        {
            languages && languages.map(({ language, fluency }) => (
                <li class="flex flex-wrap items-center">
                    <span class="text-xs flex font-mono items-center font-semibold bg-zinc-100 dark:bg-[#1b2233] text-zinc-700 dark:text-zinc-300 px-2 py-0.5 rounded-md">{language} - {fluency}</span>
                </li>
            ))
        }
    </ul>
</Section>